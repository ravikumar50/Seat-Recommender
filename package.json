{
  "name": "scenic-seat-recommender",
  "version": "1.0.0",
  "description": "A travel app that recommends the best airplane window seat for scenic views",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "build": "cd frontend && npm run build",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm start"
  },
  "devDependencies": {
    "concurrently": "^7.6.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/scenic-seat-recommender.git"
  },
  "keywords": ["travel", "airplane", "scenic", "views", "recommendations"],
  "author": "Your Name",
  "license": "MIT"
}
